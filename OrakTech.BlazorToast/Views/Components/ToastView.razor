@inherits ViewComponentBase<ToastModel>
<div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        @if (string.IsNullOrWhiteSpace(Model.ImageSource))
        {
            <svg class="bd-placeholder-img rounded mr-2" width="20" height="20" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="@IconColor"></rect></svg>
        }
        else
        {
            <img src="@Model.ImageSource" width="20" height="20" class="rounded mr-2" alt="@Model.ImageSource">
        }
        <strong class="mr-auto">@Model.Title</strong>
        <small><TimeAgo /></small>
        <button type="button" class="ml-2 mb-1 close" aria-label="Close" @onclick="CloseClick">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        @if (Model.Content is not null)
        {
            <ModelView Source="@Model.Content" />
        }
    </div>
</div>
